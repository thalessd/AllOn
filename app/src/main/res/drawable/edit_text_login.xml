<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:shape="rectangle">
        <shape>
            <stroke android:width="2dp" android:color="@color/accent"/>
            <corners android:radius="100dp"/>
            <padding android:left="20dp" android:top="18dp" android:bottom="18dp" android:right="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/icons"/>
            <corners android:radius="100dp"/>
            <padding android:left="20dp" android:top="18dp" android:bottom="18dp" android:right="20dp"/>
        </shape>
    </item>

</selector>