<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:shape="rectangle">
        <shape android:shape="rectangle">
            <solid android:color="#22ffffff"/>
            <corners android:radius="100dp"/>
            <stroke android:width="2dp" android:color="@color/accent"/>
            <padding android:left="20dp" android:top="18dp"
                android:bottom="18dp" android:right="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <stroke android:width="2dp" android:color="#fff"/>
            <padding android:left="30dp" android:top="18dp"
                android:bottom="18dp" android:right="30dp"/>
        </shape>
    </item>

</selector>



